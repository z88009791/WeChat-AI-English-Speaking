.UCenter-bg {
  background-image: var(--gradualCyan);
  color: var(--white);
  background-size: cover;
  height: 500rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  font-weight: 300;
  
}



.vipbg {
  background-image: radial-gradient(circle at top left, #fde7cf, #dfac7d);
}


.UCenter-bg .cu-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}

.UCenter-bg .custom-text {
  opacity: 1;
}

.UCenter-bg .custom-image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: -1rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.custom-map, .custom-mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.custom-map, .custom-mapBox {
  width: 750rpx;
  height: 300rpx;
}

.UCenter-bg .vip{
  margin: 20rpx;
  color: #fff1b9;
}
.UCenter-bg .bg-yellow-d{
  background-color:#fff1b9 ;
  color: var(--cyan);
}
.UCenter-bg .line-yellow-d{
  color: var(--white);
}
.UCenter-bg .no-vip{
  margin: 20rpx;
}